{
  "include": ["src"],
  "exclude": ["node_modules", "src/frontend"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@Core/*": ["core/*"],
      "@BE/*": ["backend/*"],
      "@FE/*": ["frontend/*"],
      "@Lib/*": ["lib/*"],

      "@Config/*": ["config/*"],
      "@Scripts/*": ["frontend/scripts/*"],
      "@Components/*": ["frontend/scripts/components/*"]
    },

    "sourceRoot": "src",
    "sourceMap": true,

    "typeRoots": ["node_modules/@types"],

    "strict": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "removeComments": true,
    "resolveJsonModule": false
  }
}
