{
  "include": ["src"],
  "exclude": ["node_modules", "src/frontend", "**/*.spec.ts"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react",

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src/",
    "paths": {
      "@/*": ["*"],

      "@Config/*": ["config/*"],
      "@Scripts/*": ["frontend/scripts/*"],
      "@Components/*": ["frontend/scripts/components/*"],

      "@Core/Global/*": ["core/global/*"],
      "@Core/Modules/*": ["core/modules/*"],
      "@Core/*": ["core/*"],

      "@BE/*": ["backend/*"],
      "@FE/*": ["frontend/*"],
      "@Lib/*": ["lib/*"]
    },

    "sourceRoot": "src",
    // "sourceMap": true,
    "inlineSourceMap": true,

    "typeRoots": ["node_modules/@types"],

    "strict": true,
    "allowJs": true,
    // "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "resolveJsonModule": false,

    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  }
}
