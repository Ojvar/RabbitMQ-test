{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@APP/*": ["app/*"],
            "@CONTROLLERS/*": ["app/controllers/*"],
            "@TYPES/*": ["types/*"],
            "@CONFIGS/*": ["configs/*"]
        },

        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "jsx": "preserve",

        // "incremental": true,
        "checkJs": true,
        "strict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
