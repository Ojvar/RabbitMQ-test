{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./",

        "jsx": "react",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",

        "strict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": "./",
        "paths": {
            /* App */
            "@APP/*": ["app/*"],
            "@CONTROLLERS/*": ["app/controllers/*"],
            "@TYPES/*": ["types/*"],
            "@CONFIGS/*": ["configs/*"],

            /* Global */
            "@Lib/*": ["lib/*"],

            /* Front end */
            "@VueC/*": ["resources/scripts/components/*"],
            "@Scripts/*": ["resources/scripts/*"],
            "@Styles/*": ["resources/styles/*"],
            "@Fonts/*": ["resources/fonts/*"],
            "@Images/*": ["resources/images/*"],

            /* Root */
            "@/*": ["./*"]
        }
    },

    "exclude": ["node_modules"]
}
