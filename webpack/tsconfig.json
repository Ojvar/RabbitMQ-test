{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,

        "outDir": "./dist/public",
        "rootDir": "./src/frontend",

        "baseUrl": ".",
        "paths": {
            "@PUBLIC/*": ["dist/public/*"],
            "@Config/*": ["src/config/*"],
            "@Routes/*": ["src/routes/*"],
            "@Lib/*": ["src/lib/*"],

            "@FE/Scripts/*": ["src/frontend/scripts/*"],
            "@FE/Components/*": ["src/frontend/scripts/components/*"],
            "@FE/*": ["src/frontend/*"]
        }
    }
}
